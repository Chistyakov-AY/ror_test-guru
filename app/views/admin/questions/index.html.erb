<div class="row justify-content-center mt-3">  
  <div class="col col—md—4">

    <h3><%= t('.header') %></h3>

    <table class="table table-success table-striped" style="width: auto" >
      <thead>
        <tr align="center">
          <th class="text-danger"><%= t('helpers.label.all_questions.id') %></th>
          <th class="text-danger"><%= t('helpers.label.all_questions.body') %></th>
          <th class="text-danger"><%= t('helpers.label.all_questions.test_id') %></th>
          <th class="text-danger"><%= t('helpers.label.all_questions.created_at') %></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr align="center">
            <td><%= question.id %></td>
            <td><%= question.body%></td>
            <td><%= question.test_id %></td>
            <td><%= question.created_at %></td>
          </tr>
        <% end %>
      </tbody>

    </table>
    <p>
    <%= link_to t('helpers.buttons.back'), admin_tests_path %>
    </p>
  </div>
</div>
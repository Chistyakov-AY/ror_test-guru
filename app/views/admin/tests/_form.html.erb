<h1><%= test_header(@test) %></h1>

<%= form_with model: [:admin, @test] do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <p>
    <%= form.label :title, 'Test:'%>
    <%= form.text_area :title, rows: 2, id: :test_title %>
  </p>

  <p>
    <%= form.label :level, 'Level:' %>
    <%= form.number_field :level, id: :test_level %>
  </p>

  <p>
  <%= form.label :category_id, 'Category' %>:
  <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
  <%= form.label :user_id, 'Author' %>:
  <%= form.collection_select :user_id, User.all, :id, :email, prompt: true %>
  </p>

  <p><%= form.submit 'Сохранить' %></p> 
<% end %>
